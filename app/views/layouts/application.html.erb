<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
 <body>

    <!-- jQuery library -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<!-- Latest compiled JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script> 

   <nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand"<%= link_to "Private Events", root_path %><b></b></a>
    </div>
    <ul class="nav navbar-nav">
    </ul>
    <ul class="nav navbar-nav navbar-right">

      <li><%= link_to users_path, class: "btn btn-black" do %>
        <span class="glyphicon glyphicon-user"></span> Users </a>
        <% end %></li>

      <li><%= link_to root_path, class: "btn btn-black" do %>
        <span class="glyphicon glyphicon-home"></span> Home </a>
        <% end %></li>
      <li> <%= link_to events_path, class: "btn btn-black" do %>
        <span class="glyphicon glyphicon-glass"></span> Events</a>
        <% end %></li>
        <% if current_user.nil? %>
      <li><%= link_to new_user_path, class: "btn btn-black" do %>
        <span class="glyphicon glyphicon-user"></span> Sign Up</a>
        <% end %></li>
      <li><%= link_to login_path, class: "btn btn-black" do %>
        <span class="glyphicon glyphicon-log-in"></span> Login</a>
        <% end %></li>
        <% else %>
          <li><%= link_to new_event_path, class: "btn btn-black" do %>
          <span class="glyphicon glyphicon-pencil"></span> Create event</a>
        <% end %></li>
          <li><%= link_to logout_path, method: :delete, class: "btn btn-black" do %>
          <span class="glyphicon glyphicon-log-in"></span> Signout</a>
        <% end %></li>
        <li><%= link_to current_user, class: "btn btn-black" do %>
          <span class="glyphicon glyphicon-user"></span> <%= @current_user.name %></a>
        <% end %></li>
        <% end %>
    </ul>
  </div>
</nav> 

<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>

      <%= yield %>    
  </body>
</html>